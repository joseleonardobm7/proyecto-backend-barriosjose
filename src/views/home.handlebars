<div class="mt-3 p-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-0"> Productos disponibles </h1>
    <a href="/realtimeproducts" class="btn btn-primary"> Gestionar Productos </a>
  </div>
  <div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-1">
      {{#each products}}
        <div class="card-product">
          <div class="text-center mx-auto" style="width: 300px; height: 200px;">
            <div class="d-flex justify-content-center align-items-center" style="width: 100%; height: 100%;">
              <img 
                src="{{or this.image 'https://via.placeholder.com/300x200.png?text=Producto+sin+imagen'}}"
                class="img-fluid" 
                style="max-width: 100%; max-height: 100%;" 
                alt="{{ this.title }}" 
                onerror="this.src='https://via.placeholder.com/300x200.png?text=Producto+sin+imagen'"
              >
            </div>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between">
                <span class="fw-bold me-2"> Código </span>
                <span>{{ this.sku }}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span class="fw-bold me-2"> Título </span>
                <span class="card-title" data-bs-toggle="tooltip" data-bs-placement="top" title="{{ this.title }}">{{ this.title }}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between">
                <span class="fw-bold me-2"> Precio </span>
                <span>${{ this.price }}</span>
              </li>
            </ul>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
